!!! 5

%html
  %head
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="viewport" content="initial-scale=1,user-scalable=no">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <link rel="stylesheet" href="/css/vendor/bootstrap.css">
    <link rel="stylesheet" href="/css/vendor/cover.css">
    <link rel="stylesheet" href="/css/index.css">
    <script src="/js/vendor/jquery.js"></script>
    <script src="/js/index.js"></script>
  %body
    %audio#bell{:src => "/sound/bell.wav", :preload => "auto"}
    .background-wrapper{ :style => "background-image: url(#{image.url})" }
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .inner.cover
            %h1.cover-heading#taskdisplay
              = task.title if task
            %p.lead
              %a.btn.btn-lg.btn-default#taskbutton{:href => "/task"} Press me!
              %span#timer
                %span.glyphicon.glyphicon-time
                %span#timer-countdown
          .mastfoot
            %a{:href => "https://github.com/juliaguar/random_task", :target => "_blank"} 
              with <span class="glyphicon glyphicon-heart-empty"></span> from berlin
            %br
            %span.glyphicon.glyphicon-camera
            %span#imagecredits
              = image.credits if image
            %span <span class="glyphicon glyphicon-bell"></span> <a href="http://creativecommons.org/licenses/by/3.0/" target="_blank">cc-by</a> by <a href="http://www.freesound.org/people/gabstero/" target="_blank">gabstero</a>
            .inner