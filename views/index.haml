%html
  %head
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="viewport" content="initial-scale=1,user-scalable=no">
    <link rel="stylesheet" href="/css/vendor/bootstrap.css">
    <link rel="stylesheet" href="/css/vendor/cover.css">
    <link rel="stylesheet" href="/css/index.css">
    <script src="/js/vendor/jquery.js"></script>
    <script src="/js/index.js"></script>
  %body
    .background-wrapper{ :style => "background-image: url(#{image.url})" }
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .inner.cover
            %h1.cover-heading#taskdisplay
              = task.title if task
            %p.lead
              %a.btn.btn-lg.btn-default#taskbutton{:href => "/task"} Press me!
              %span#countdown
          .mastfoot
            %a{:href => "https://github.com/juliaguar/random_task", :target => "_blank"} with &#x2661; from berlin
            %br
            %span.glyphicon.glyphicon-camera
            %span#imagecredits
              = image.credits if image
            .inner